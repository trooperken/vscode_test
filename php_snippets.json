{
  // Place your snippets for php here. Each snippet is defined under a snippet name and has a prefix, body and
  // description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
  // $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the
  // same ids are connected.
  // Example:
  // "Print to console": {
  // 	"prefix": "log",
  // 	"body": [
  // 		"console.log('$1');",
  // 		"$2"
  // 	],
  // 	"description": "Log output to console"
  // }
  "Ken function return": {
    "prefix": ["ken-function-return", "kfunction-return"],
    "body": ["function $1 ($2) {", "\t$0", "}"],
    "description": "Ken function return"
  },
  "Ken this-> ": {
    "prefix": "th",
    "body": "\\$this->$1",
    "description": "Ken class This->"
  },
  "Ken SELF:: ": {
    "prefix": "se",
    "body": "self::$1",
    "description": "Ken class SELF::"
  },
  "Ken Print_r ": {
    "prefix": "pr",
    "body": "print_r($1);",
    "description": "Ken Print_r"
  },
  "Ken dirname-dir ": {
    "prefix": "dirname-dir",
    "body": "dirname(__DIR__)",
    "description": "Ken dirname-dir"
  },
  "Ken PHP Tags": {
    "prefix": ["php", "kphp"],
    "body": ["<?php ", "$1", "?>"],
    "description": "Ken php tags"
  },
  "Ken if-block": {
    "prefix": "if-block",
    "body": ["if($1){", "$2", "}"],
    "description": "Ken if-block"
  },
  "Ken for i loop": {
    "prefix": ["for", "fori"],
    "body": ["for (\\$i=0;\\$i<$1;\\$i++){", "\t$0", "}"],
    "description": "Ken for i loop"
  },
  "Ken while Loop": {
    "prefix": ["while", "wh"],
    "body": ["while ($1){", "\t$0", "}"],
    "description": "Ken While loop"
  },
  "Ken nbsp": {
    "prefix": ["nbsp", "nada"],
    "body": "&nbsp;"
  }
}
